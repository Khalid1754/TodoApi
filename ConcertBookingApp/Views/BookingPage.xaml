<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertBookingApp.Views.BookingPage"
             Title="Book Concert">
    <StackLayout Padding="20">
        <Label Text="{Binding ConcertTitle}" FontSize="24" FontAttributes="Bold" />
        <Entry Placeholder="Name" Text="{Binding CustomerName}" />
        <Entry Placeholder="Email" Text="{Binding CustomerEmail}" />
      <Entry Placeholder="Phone number" Text="{Binding CustomerPhone}" />
        <Button Text="Save Booking" Clicked="OnSaveButtonClicked" />
        <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>